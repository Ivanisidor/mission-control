[Unit]
Description=Convex dev server (Mission Control)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ivan
WorkingDirectory=/home/ivan/clawd/mission-control
Environment=NODE_ENV=development
EnvironmentFile=/home/ivan/clawd/mission-control/.env.local
ExecStart=/usr/bin/npx convex dev
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
