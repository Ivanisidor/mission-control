[Unit]
Description=Mission Control (Next.js) - LAN
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ivan
WorkingDirectory=/home/ivan/clawd/mission-control
Environment=NODE_ENV=production
EnvironmentFile=/home/ivan/clawd/mission-control/.env.lan
ExecStart=/usr/bin/npm run start -- -H 0.0.0.0 -p 3000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
