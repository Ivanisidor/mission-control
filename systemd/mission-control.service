[Unit]
Description=Mission Control (Next.js)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ivan
WorkingDirectory=/home/ivan/clawd/mission-control
Environment=NODE_ENV=production
# Load secrets and URLs from here:
EnvironmentFile=/home/ivan/clawd/mission-control/.env.production
ExecStart=/usr/bin/node /home/ivan/clawd/mission-control/node_modules/.bin/next start -p 3001 -H 0.0.0.0
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
